.moving-bande
  position: absolute
  bottom: 5%
  right: 5%
  width: 50px
  height: 200px
  display: flex
  flex-flow: row nowrap
  align-items: flex-end
  justify-content: space-around

  .bande
    width: 5px
    height: 40px
    background-color: #000
    transition: .2s ease-out
    transform-origin: center bottom
    // transform rotate(-180deg)

  .b1
    animation growing 2s ease-in-out infinite alternate
  
  .b2
    animation growing 3s ease-in-out 1s infinite alternate
 
  .b3
    animation growing 4s ease-in-out 0.5s infinite alternate
  
  .b4
    animation growing 2.5s ease-in-out 0.5s infinite reverse



@keyframes rotationRound {

  0%{
    transform translate(-50%,-50%) rotate(0)  
  }
  100%{
    transform translate(-50%, -50%) rotate(360deg)  
  }

}

@keyframes growing {

  0%{
    height: 40px  
  }
  30%{
    height: 15px  
  }
  50%{
    height: 65px  
  }
  75%{
    height 45px  
  }
  85%{
    height 15px  
  }
  100%{
    height: 55px  
  }
}
  
    
