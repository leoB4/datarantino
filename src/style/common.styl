// Button trigger
// **************
.btn
  width 30px
  height 30px
  border-radius 50%
  background-color #000
  position absolute
  border none
  outline none
  cursor pointer
  transition .5s ease-in-out

  &::after
    content url('../assets/round-btn.svg')
    position absolute
    transform-origin: center
    transform translate(-50%, -50%)
    width 50px
    height 50px
    animation rotationRound 10s infinite linear
    transition .2s ease-in-out

  &:hover
    background-color #FFD400
    transform scale(1.2)

    &::after
      opacity: 0


@keyframes rotationRound {

  0%{
    transform translate(-50%,-50%) rotate(0)  
  }
  100%{
    transform translate(-50%, -50%) rotate(360deg)  
  }

}
    
