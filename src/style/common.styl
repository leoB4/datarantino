html, body
  margin 0
  padding 0
  overflow hidden
  position: relative
canvas
  width 100%
  height 100%
  outline none

.header 
  position: fixed
  top: 2%
  width: 100vw

.header-wrapper
  width: 100%
  display flex
  flex-flow row nowrap
  align-items center
  justify-content: space-around

.header-title
  font-family: 'Piedra', cursive;
  text-transform: uppercase
  font-size: 1em

.header-nav
  width: 50%
  display flex
  flex-flow row nowrap
  align-items center
  justify-content: space-around

  .object 
    width: 40px
    height: 40px
    background-color: #FFD400
    border-radius 50%
    transition .3s ease-in-out
    position relative

    svg
      width: 50%
      height: auto
      position: absolute
      top: 50%
      left: 50%
      transform translate(-50%,-50%)
      transition .3s ease-in-out

    &:hover
      transform: scale(1.6)

      svg
        .st0
          opacity: 1

  .selectedNav
    transform: scale(1.6)

    svg
      transform: translate(-50%,-50%) scale(1.6)

  .line
    display flex
    flex-flow row nowrap
    align-items center
    justify-content: space-around

    span
      width: 10px
      height: 2px
      background-color: #000
      margin: 0px 10px

.lab-mouse
  transform-origin: center right
  transform rotate(-90deg)
  p
    font-family: 'Roboto Mono', monospace;
    font-size: 30px
    display: inline-block
    vertical-align: middle
  
  span 
    margin-left: 20px
    width: 40px
    height: 2px
    background-color: #000
    display: inline-block
    vertical-align: middle



.gun-fireshot
  position fixed
  bottom 10%
  right: 5%
  width: 400px

  .boxed
    width: 65px
    height: 65px
    border-top 1px solid black
    border-left 1px solid black
    position: absolute
    left: -30px
    top: -30px

 
  .bullet-fire
    display: flex
    flex-flow column nowrap
    align-items: flex-start
    justify-content: space-around

    .box-text
      .bullet-average
        font-size: 60px
        color: #FFD400
        font-family: 'Piedra', cursive;
        margin: 0
      
      .bullet-desc
        margin: 0
        font-family: 'Roboto Mono', monospace;

    .graph-bullet
      width: 100%
      .movie
        width: 80%
        display flex
        flex-flow row nowrap
        align-items: center
        justify-content: space-around

        .title-movie
          font-family: 'Piedra', cursive;
          text-transform: uppercase
          text-align: right
          width: 35%
          margin-right: 10px

        .bulletPerMovie
          width: 40%
          height: 10px
          background-color: #FFD400
          margin-left: 10px
        


















// **************
// Button trigger
// **************
.btn
  width 30px
  height 30px
  border-radius 50%
  background-color #000
  position absolute
  border none
  outline none
  cursor pointer
  transition .5s ease-in-out

  &::after
    content url('../assets/round-btn.svg')
    position absolute
    transform-origin: center
    transform translate(-50%, -50%)
    width 50px
    height 50px
    animation rotationRound 10s infinite linear
    transition .2s ease-in-out

  &:hover
    background-color #FFD400
    transform scale(1.2)

    &::after
      opacity: 0


@keyframes rotationRound {

  0%{
    transform translate(-50%,-50%) rotate(0)  
  }
  100%{
    transform translate(-50%, -50%) rotate(360deg)  
  }

}
    
