html, body
  margin 0
  padding 0
  overflow hidden
  position: relative
canvas
  width 100%
  height 100%
  outline none

.header 
  position: fixed
  top: 2%
  width: 100vw

.header-wrapper
  width: 100%
  display flex
  flex-flow row nowrap
  align-items center
  justify-content: space-around

.header-title
  font-family: 'Piedra', cursive;
  text-transform: uppercase
  font-size: 1em

.header-nav
  width: 50%
  display flex
  flex-flow row nowrap
  align-items center
  justify-content: space-around

  .object 
    width: 40px
    height: 40px
    background-color: #FFD400
    border-radius 50%
    transition .3s ease-in-out
    position relative

    svg
      width: 50%
      height: auto
      position: absolute
      top: 50%
      left: 50%
      transform translate(-50%,-50%)
      transition .3s ease-in-out

    &:hover
      transform: scale(1.6)

      svg
        .st0
          opacity: 1

  .selectedNav
    transform: scale(1.6)

    svg
      transform: translate(-50%,-50%) scale(1.6)

  .line
    display flex
    flex-flow row nowrap
    align-items center
    justify-content: space-around

    span
      width: 10px
      height: 2px
      background-color: #000
      margin: 0px 10px

.lab-mouse
  transform-origin: center right
  transform rotate(-90deg)
  p
    font-family: 'Roboto Mono', monospace;
    font-size: 30px
    display: inline-block
    vertical-align: middle
  
  span 
    margin-left: 20px
    width: 40px
    height: 2px
    background-color: #000
    display: inline-block
    vertical-align: middle



